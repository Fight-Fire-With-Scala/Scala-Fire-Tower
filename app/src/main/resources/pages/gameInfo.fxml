<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<GridPane prefHeight="150" prefWidth="150" style="-fx-background-color: #e8d7c2; -fx-border-color: black; -fx-border-width: 2;"
          xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <StackPane prefHeight="75" prefWidth="75" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
        <VBox alignment="CENTER" spacing="5" prefHeight="138.0" prefWidth="100.0" style="-fx-padding: 42 0 42 42;">
            <TextField fx:id="turnNumber" prefWidth="140" text="Turn Number"/>
            <TextField fx:id="turnPlayer" prefWidth="140" text="Turn Player"/>
            <TextField fx:id="turnPhase" prefWidth="140" text="Turn Phase"/>
        </VBox>
    </StackPane>
    <BorderPane style="-fx-padding: 0 42 12 42;" GridPane.columnIndex="1">
        <center>
            <Pane BorderPane.alignment="CENTER">
                <StackPane style="-fx-background-color: #e8d7c2; -fx-border-color: black; -fx-border-width: 2;"
                           fx:id="dicePane" layoutX="35.0" layoutY="35.0" prefHeight="75" prefWidth="75" />
            </Pane>
        </center>
    </BorderPane>
</GridPane>